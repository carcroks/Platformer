<Window x:Class="Platformer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Platformer"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Canvas x:Name="field" Focusable="True" KeyDown="KBD" KeyUp="KBU" Background="#292428">
        <Label x:Name="charx" Width="60" Height="30" Canvas.Right="0">
        </Label>
        <Label x:Name="chary" Width="60" Height="30" Canvas.Right="0" Canvas.Top="30">
        </Label>
        <Label x:Name="charxspeed" Width="90" Height="30" Canvas.Right="60" Canvas.Top="0">
        </Label>
        <Label x:Name="charyspeed" Width="90" Height="30" Canvas.Right="60" Canvas.Top="30">
        </Label>
        <Rectangle x:Name="character" Width="30" Height="40" Fill="Brown" Canvas.Left="326" Canvas.Bottom="0">
        </Rectangle>
    </Canvas>
</Window>
